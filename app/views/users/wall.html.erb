<div class="container">

  <%= link_to 'New Pin', new_pin_path, :class => 'btn btn-primary', :style => 'color: white' %>

 <h1>Listing pins</h1>
 <table class="table">



  <% @pins.each do |pin| %>
  <div class="col-md-3">
   <div class="thumbnail">
    <%= link_to(image_tag(pin.photo, :class => 'img-responsive'), pin) %>
    <%= pin.description %>
   </div>
   <br>
   
   <%= link_to 'Editar', edit_pin_path(pin), :class => 'btn btn-primary', :style => 'color: white' %>
   <%= link_to 'Borrar', pin, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger', :style => 'color: white' %>
  </div>
  <% end %>



 </div>