<div class="container">
<h2>Ingresar</h2>
<hr>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
<div class="row">
  <div class="form-group col-md-4">
  <div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true, :class => "form-control" %></div>
  </div>
</div>
<div class="row">
  <div class="form-group col-md-4">	
  <div><%= f.label :password %><br />
  <%= f.password_field :password, :class => "form-control" %></div>
  </div>
</div>  
<div class="row">
  <div class="form-group col-md-4">
  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :"remember_me", "Recuerdame" %></div>
  <% end -%>
  </div>
</div>

<div class="row">  

  <div class="form-group col-md-4">
  <div><%= f.submit "Ingresar Ahora", :class => "btn btn-primary" %></div>
  </div>  
</div>  
  <hr>
<% end %>

<%= render "devise/shared/links" %>
</div>